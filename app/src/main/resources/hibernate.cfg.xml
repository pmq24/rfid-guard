<!DOCTYPE hibernateManager-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernateManager.org/dtd/hibernateManager-configuration-3.0.dtd">
<hibernateManager-configuration>
  <session-factory>
    <property name="connection.driver_class">org.h2.Driver</property>
    <property name="connection.url">jdbc:h2:mem:test</property>
    <property name="dialect">org.hibernateManager.dialect.H2Dialect</property>

    <property name="connection.username">sa</property>
    <property name="connection.password"/>

    <property name="connection.pool_size">1</property>


    <property name="show_sql">true</property>
    <property name="current_session_context_class">thread</property>
    <property name="hbm2ddl.auto">create-drop</property>

    <property name="hibernateManager.dbcp.initialSize">5</property>
    <property name="hibernateManager.dbcp.maxTotal">20</property>
    <property name="hibernateManager.dbcp.maxIdle">10</property>
    <property name="hibernateManager.dbcp.minIdle">5</property>
    <property name="hibernateManager.dbcp.maxWaitMillis">-1</property>


    <mapping class="com.github.pmq24.rfid_guard.database.records.TagReadRecord" />

  </session-factory>
</hibernateManager-configuration>